---

export interface Props {
  label?: string;
  name: string;
  type: astroHTML.JSX.HTMLInputTypeAttribute;
  placeholder: string;
  required?: boolean;
}

const { label, type, placeholder, required, name } = Astro.props;
const id = `input-${crypto.randomUUID()}`;
const requiredAttr = required ? { required } : {};

---

<div class="w-full">
    {label && <label for={id} class="w-full block mb-2 text-sm font-medium text-gray-900 dark:text-white">{label}</label>}
    <input type={type} id={id} name={name} placeholder={placeholder} {...requiredAttr} class="bg-slate-100 text-gray-900 text-sm rounded-lg focus-visible:outline-cyan-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" />
</div>
