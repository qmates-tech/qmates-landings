---
import { Image } from "astro:assets";
import qmates from "~/assets/qmates-logo-black.png";
import Gradient from "~/components/gradient.astro";
import Landing from "~/layouts/Landing.astro";

---
<Landing
  title="QMates - 404 Not Found"
  description="The page you are looking for does not exist."
>
  <div class="w-80 absolute top-0 text-center w-full justify-center flex items-center">
    <a href="https://qmates.tech" class="focus:outline-none focus-active:outline-none focus:shadow-none shadow-none ring-transparent focus:ring-transparent">
      <Image alt="QMates" src={qmates} class="w-60" />
    </a>
  </div>
  <div class="h-screen flex flex-col items-center justify-center bg-white text-center">
    <h1 class="font-extrabold tracking-tight text-9xl"><Gradient>404</Gradient></h1>
    <h2 class="tracking-tight text-4xl mt-8">Page Not Found</h2>
  </div>
</Landing>