---
import "@fontsource-variable/inter";
import "~/styles/index.css";

const { generator, site } = Astro;

export interface Props {
  title: string;
  description: string;
  imageUrl?: string; // image path relative to the public directory
}

const { title, description, imageUrl } = Astro.props;
const image = imageUrl ? new URL(imageUrl, site) : undefined;
---

<!doctype html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={generator} />

    <title>{title}</title>
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {image && <meta property="og:image" content={image} />}
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-KP6CTBZD');</script>
    <!-- End Google Tag Manager -->
  </head>
  <body
    class="h-full overflow-x-hidden bg-section text-default text-base selection:bg-secondary selection:text-white"
  >
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KP6CTBZD"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->
  <slot />
  </body>
</html>