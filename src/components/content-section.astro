---
export interface Props {
  id: string;
  title?: string;
}

const { title, id } = Astro.props;
---

<section
  id={id}
  class="flex scroll-mt-24 flex-col items-center gap-6"
>
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2 class="text-center font-bold tracking-tight text-6xl">
      <slot name="title" />{title ? <span class="gradient-text">{title}</span> : ''}
    </h2>
    {Astro.slots.has('subtitle') && <h3 class="text-center font-bold tracking-tight text-4xl">
      <slot name="subtitle" />
    </h3>}
  </div>
  <p class="max-w-xl text-center text-md">
    <slot name="lead" />
  </p>
  <slot />
</section>
